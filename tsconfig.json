{
  "compilerOptions": {
    "lib": ["es2018", "DOM"],
    "module": "commonjs",
    "target": "es2018",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist",
    "suppressExcessPropertyErrors": true,
    "suppressImplicitAnyIndexErrors": true,
    "noImplicitAny": false
  },
  "exclude": ["node_modules"]
}
